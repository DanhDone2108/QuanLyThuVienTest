<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_user"
                android:layout_width="168dp"
                android:layout_height="168dp"
                android:src="@drawable/anh_bia_1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/t_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:text="Name User: "
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/t_lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:text="Last Name: "
                android:layout_below="@id/t_user"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/d_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:text="Address: "
                android:layout_below="@id/t_lastname"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/d_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:text="Phone Number: "
                android:layout_below="@id/d_address"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/d_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:text="Age: "
                android:layout_below="@id/d_phone"
                android:layout_marginTop="4dp" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>